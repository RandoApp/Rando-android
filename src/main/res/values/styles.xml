<resources>

    <!-- Base application theme. -->
    <style name="RandoTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/auth_input_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RandoThemeFullScreen" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="GrayButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/gray_button_background</item>
    </style>

</resources>
