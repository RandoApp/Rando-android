<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bon_appetit_button_size"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/missing_storage_permission_message"
            android:layout_width="@dimen/empty_home_message_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:minWidth="50sp"
            android:shadowColor="@color/empty_home_message_shadow"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="3.0"
            android:text="@string/missing_storage_permission_message"
            android:textColor="@color/empty_home_message"
            android:textSize="20.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/enable_storage"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/signup_button_background"
            android:text="@string/storage_permission_allow"
            android:textColor="@color/auth_text"
            android:textSize="18dp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>