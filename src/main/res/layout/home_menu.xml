<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/help_background"
    android:gravity="center_horizontal"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="27.0dip"
    android:paddingRight="27.0dip">

    <ScrollView
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:layout_width="fill_parent"
        android:paddingTop="30.0dip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/help_layout_take"
                layout="@layout/help_section" />

            <include
                android:id="@+id/help_layout_location"
                layout="@layout/help_section" />

            <include
                android:id="@+id/help_layout_options"
                layout="@layout/help_section" />
        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/GrayButton"
        android:id="@+id/aboutButton"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_width="fill_parent"
        android:minHeight="@dimen/general_button_min_height"
        android:text="@string/about" />

    <Button
        style="@style/GrayButton"
        android:id="@+id/logoutButton"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28.0dip"
        android:layout_width="fill_parent"
        android:minHeight="@dimen/general_button_min_height"
        android:text="@string/logout" />
</LinearLayout>