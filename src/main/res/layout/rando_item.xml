<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/rando_pair_padding_bottom"
    android:tag="rando_pair">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="rando_placeholder">

        <ViewSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/rando_padding_portrait_column_bottom"
            android:paddingLeft="@dimen/rando_padding_portrait_column_left"
            android:paddingRight="@dimen/rando_padding_portrait_column_right"
            android:paddingTop="@dimen/rando_padding_portrait_column_top"
            android:tag="viewSwitcher">

            <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:tag="image"
                app:oval="true" />

            <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="map"
                app:oval="true" />
        </ViewSwitcher>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/rando_padding_portrait_column_left"
        android:layout_marginRight="@dimen/rando_padding_portrait_column_right"
        android:layout_marginTop="@dimen/rando_padding_portrait_column_top"
        android:tag="unwanted_layer"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_boring" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/rando_padding_portrait_column_left"
        android:layout_marginRight="@dimen/rando_padding_portrait_column_right"
        android:layout_marginTop="@dimen/rando_padding_portrait_column_top"
        android:tag="actions_layer"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="23dp"
                android:background="@drawable/ic_share_rando"
                android:tag="share_button"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="23dp"
                android:background="@drawable/ic_trash_rando"
                android:tag="delete_button"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:tag="spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/ic_autorenew_black_48dp" />

</RelativeLayout>
