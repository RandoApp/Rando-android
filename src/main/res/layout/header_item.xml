<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/ic_home_size"
    android:paddingEnd="@dimen/ic_home_size"
    android:background="#f5f5f0">
    <ImageView
        android:layout_width="@dimen/ic_home_size"
        android:layout_height="@dimen/ic_home_size"
        android:layout_marginLeft="@dimen/icon_margin"
        android:layout_marginStart="@dimen/icon_margin"
        android:src="@drawable/ic_thumb_up_green_20dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:tag="likes"/>
    <TextView
        android:id="@+id/my_likes"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_marginTop="-3.5dp"
        android:layout_weight="0"
        android:layout_width="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/rando_logo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:fontFamily="@font/myfonts"
        android:gravity="center"
        android:letterSpacing="0.115"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="normal" />
    <ImageView
        android:layout_width="@dimen/ic_home_size"
        android:layout_height="@dimen/ic_home_size"
        android:src="@drawable/ic_thumb_down_red_20dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:tag="dislikes" />
    <TextView
        android:id="@+id/my_dislikes"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="@dimen/icon_margin"
        android:layout_marginEnd="@dimen/icon_margin"
        android:layout_marginTop="-3.5dp"
        android:layout_weight="0"
        android:gravity="center" />
</LinearLayout>